<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    tools:context=".view.fragments.UserFragment">

    <ImageView
        android:id="@+id/user_header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/main_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/user_avt"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintBottom_toBottomOf="@id/user_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USERNAME"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/user_header"
        app:layout_constraintLeft_toRightOf="@id/user_avt"
        app:layout_constraintTop_toTopOf="parent" />
    /////

    <ImageButton
        android:id="@+id/user_btn_info"
        style="@style/TextBlockStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/user_header" />

    <ImageView
        android:id="@+id/user_icon_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ic_user"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@id/user_btn_info"
        app:layout_constraintLeft_toLeftOf="@id/user_btn_info"
        app:layout_constraintTop_toTopOf="@id/user_btn_info" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:elevation="10dp"
        android:text="Thông tin cá nhân"
        android:textColor="@color/second_color"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@id/user_btn_info"
        app:layout_constraintLeft_toRightOf="@+id/user_icon_user"
        app:layout_constraintStart_toStartOf="@+id/user_btn_info"
        app:layout_constraintTop_toTopOf="@id/user_btn_info" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_baseline_arrow_forward_ios_24"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@id/user_btn_info"
        app:layout_constraintRight_toRightOf="@id/user_btn_info"
        app:layout_constraintTop_toTopOf="@id/user_btn_info" />
    ///////


    /////

    <ImageButton
        android:id="@+id/user_btn_address"
        style="@style/TextBlockStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/user_btn_info" />

    <ImageView
        android:id="@+id/user_icon_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ic_location"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@id/user_btn_address"
        app:layout_constraintLeft_toLeftOf="@id/user_btn_address"
        app:layout_constraintTop_toTopOf="@id/user_btn_address" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:elevation="10dp"
        android:text="Sổ địa chỉ"
        android:textColor="@color/second_color"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@id/user_btn_address"
        app:layout_constraintLeft_toRightOf="@+id/user_icon_address"
        app:layout_constraintStart_toStartOf="@+id/user_btn_address"
        app:layout_constraintTop_toTopOf="@id/user_btn_address" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_baseline_arrow_forward_ios_24"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@id/user_btn_address"
        app:layout_constraintRight_toRightOf="@id/user_btn_address"
        app:layout_constraintTop_toTopOf="@id/user_btn_address" />
    /////

    <ImageButton
        android:id="@+id/user_btn_cart"
        style="@style/TextBlockStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/user_btn_address" />

    <ImageView
        android:id="@+id/user_icon_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ic_cart"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@id/user_btn_cart"
        app:layout_constraintLeft_toLeftOf="@id/user_btn_cart"
        app:layout_constraintTop_toTopOf="@id/user_btn_cart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:elevation="10dp"
        android:text="Giỏ hàng"
        android:textColor="@color/second_color"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@id/user_btn_cart"
        app:layout_constraintLeft_toRightOf="@+id/user_icon_cart"
        app:layout_constraintStart_toStartOf="@+id/user_btn_cart"
        app:layout_constraintTop_toTopOf="@id/user_btn_cart" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_baseline_arrow_forward_ios_24"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@id/user_btn_cart"
        app:layout_constraintRight_toRightOf="@id/user_btn_cart"
        app:layout_constraintTop_toTopOf="@id/user_btn_cart" />
    //////


    <ImageButton
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/user_btn_logout"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/stroke_button"
        android:elevation="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_btn_cart" />
    /////


    <TextView
        android:id="@+id/user_txt_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:elevation="10dp"
        android:text="Đăng xuất"
        android:textColor="@color/main_color"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/user_btn_logout"
        app:layout_constraintEnd_toStartOf="@+id/user_icon_logout"
        app:layout_constraintLeft_toLeftOf="@id/user_btn_logout"
        app:layout_constraintTop_toTopOf="@id/user_btn_logout" />

    <ImageView
        android:id="@+id/user_icon_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:background="@drawable/ic_logout"
        android:backgroundTint="@color/main_color"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@id/user_btn_logout"
        app:layout_constraintRight_toRightOf="@id/user_btn_logout"
        app:layout_constraintTop_toTopOf="@id/user_btn_logout" />

    <ImageView
        android:id="@+id/footer_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="10dp"
        android:src="@drawable/search_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/footer_home"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_home"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/footer_container"
        app:layout_constraintRight_toLeftOf="@+id/footer_list"
        app:layout_constraintTop_toTopOf="@+id/footer_container" />

    <ImageButton
        android:id="@+id/footer_list"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_list"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/footer_home"
        app:layout_constraintRight_toLeftOf="@id/footer_cart"
        app:layout_constraintTop_toTopOf="@+id/footer_container" />

    <ImageButton
        android:id="@+id/footer_cart"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_cart"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/footer_list"
        app:layout_constraintRight_toLeftOf="@id/footer_user"
        app:layout_constraintTop_toTopOf="@+id/footer_container" />

    <ImageButton
        android:id="@+id/footer_user"
        android:layout_width="20dp"
        android:layout_height="22dp"
        android:background="@drawable/ic_yuser"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/footer_cart"
        app:layout_constraintRight_toRightOf="@id/footer_container"
        app:layout_constraintTop_toTopOf="@+id/footer_container" />
</androidx.constraintlayout.widget.ConstraintLayout>