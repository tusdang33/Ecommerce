<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:padding="20dp"
        android:id="@+id/dialog_acc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn có chắc muốn xoá "
        android:background="@color/main_color"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <Button
        style="@style/YellowButtonStyle"
        android:id="@+id/dialog_del_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Cancel"
        app:layout_constraintTop_toBottomOf="@id/dialog_acc_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dialog_del_ok" />
    <Button
        style="@style/DelButtonStyle"
        android:id="@+id/dialog_del_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XOÁ"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toRightOf="@id/dialog_del_cancel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_acc_title"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/main_color"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_del_cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>