<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1">

    <ImageView
        android:id="@+id/user_header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/main_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/user_avt"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintBottom_toBottomOf="@id/user_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/admin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADMIN"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/user_header"
        app:layout_constraintLeft_toRightOf="@id/user_avt"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/user_header"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/user_btn_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />
        <ImageView
            android:id="@+id/user_icon_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_user"
            android:layout_gravity="center|left"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:textColor="@color/second_color"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_arrow_forward_ios_24"
            android:layout_gravity="center|right"
            android:layout_marginRight="15dp"/>


    </FrameLayout>

    /////

    /////

    <ImageButton
        android:id="@+id/admin_btn_logout"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/stroke_button"
        android:elevation="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="308dp" />

    <TextView
        android:id="@+id/user_txt_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:elevation="10dp"
        android:text="Đăng xuất"
        android:textColor="@color/main_color"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/admin_btn_logout"
        app:layout_constraintEnd_toStartOf="@+id/user_icon_logout"
        app:layout_constraintLeft_toLeftOf="@id/admin_btn_logout"
        app:layout_constraintTop_toTopOf="@id/admin_btn_logout" />

    <ImageView
        android:id="@+id/user_icon_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:background="@drawable/ic_logout"
        android:backgroundTint="@color/main_color"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@id/admin_btn_logout"
        app:layout_constraintRight_toRightOf="@id/admin_btn_logout"
        app:layout_constraintTop_toTopOf="@id/admin_btn_logout" />


</androidx.constraintlayout.widget.ConstraintLayout>